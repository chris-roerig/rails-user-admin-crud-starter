.container
  = devise_error_messages!

  %h2 Registration
  .row.clearfix
    .col-md-6.column
      .main
        %h3
          Create a new account or
          %a{:href => new_user_session_path} Log in
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .form-group
            %label{:for => "inputEmail"} Email
            = f.email_field :email, autofocus: true, class: 'form-control', id: 'inputEmail'
          .form-group
            %label{:for => "inputPassword"} Password
            = f.password_field :password, autocomplete: "off", class: 'form-control', id: 'input#inputPassword'

          .form-group
            %label{:for => "inputPasswordConfirmation"} Password confirmation
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', id: 'input#inputPasswordConfirmation'

          %button.btn.btn.btn-primary{:type => "submit"}
            Sign up
